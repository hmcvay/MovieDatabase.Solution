@{
  Layout = "_Layout";
}
@using MovieDatabase.Models;
@using System;

@model List<MovieDatabase.Models.Movie>

<h1>Rentable Movies</h1>

@if (Model.Count == 0)
{
  <h3>Fresh out!</h3>
}
else
{
  <ul>
  @foreach (Movie movie in Model)
  {
    <li>checked out? @movie.IsCheckedOut</li>
    <li>@Html.ActionLink($"{movie.Title}", "Details", new { id = movie.MovieId })</li> 
  }
  </ul>
}

<p>@Html.ActionLink("Add new movie", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
